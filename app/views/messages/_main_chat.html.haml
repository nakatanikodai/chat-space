
.main-bar-contents
  .main-bar-chat
    .main-bar-chat__contents
      =@group.name
    .main-bar-member
      - @group.users.each do |user|
        =user.name
      .main-bar-member__edit
        =link_to 'Edit', edit_group_path(@group)
  .messages-parts
    .messages-parts__data
      .messages-parts__user-name
        syouya
      .messages-parts__day-time
        2019/11/23/19:10:21
    .messages-parts__messages
      this is a first
  
    .send-contents-parts
      .message-send-form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'input-form', placeholder: 'type a message'
          .image-send
            = f.label :image, class: 'form__mask__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'hiden'
          = f.submit 'Send', class: 'send-button'
          
      
      
      
      
      
      
