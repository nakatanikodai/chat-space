
.main-chat
  .main-header
    .main-header__left
      .main-header__left__group-name
        =@group.name
      .main-header__left__group-member
        %ul.main-header__group-member__list
          Memberï¼š
        .main-header__group-member__list__member
        - @group.users.each do |user|
          = user.name
    .main-header__edit
      =link_to 'Edit', edit_group_path(@group)
  .messages
    =render @messages
  .send-form
    .new-message
      .input-box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'input-form', placeholder: 'type a message'
        
        .input-box__image
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hiden'
        = f.submit 'Send', class: 'send-button'

